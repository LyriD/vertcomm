#news
  - if @items.any?
    - @items.each do |item|
      .new
        time
          .date.garamond=I18n.l(item.publish_date, :format => '%d', :locale => :ru)
          .month=I18n.l(item.publish_date, :format => '%B', :locale => :ru)
          .year=I18n.l(item.publish_date, :format => '%Y', :locale => :ru)
        = image_tag item.teaser_image.thumbnail(geometry: "100x100#c").url  if item.teaser_image
        .content
          h2 = item.title
          .short= raw item.teaser
          .full= raw item.body
          a.more href="#" подробнее

  = will_paginate @items